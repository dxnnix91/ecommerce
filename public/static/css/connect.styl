body
    background-color #f6f6f6
    margin 0px
.mtop16
    margin-top 16px
.mbottom16
    margin-bottom 16px

i
    height 30px
    padding 7px

.box
    background-color #fff
    border 1px solid #d6d6d6
    position absolute
    width 500px
    border-radius 8px
    .btn-primary
        width 100%
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    .inside
            padding 20px
    .header
        a
            img
                display block
                margin 0px auto
                width 50%
    .footer
        padding-left 20px

.box_login
    left calc(50% - 250px)
    top calc(50% - 287px)
